UTest({
	$before () {
		Utils.start();
	},
	$after () {
		//Utils.stop();
	},
	'should have foo class' (done) {
		Utils.query('/html/foo.html', $ => {
			$
				.find('body > section')
				.hasClass('foo')
				.done(has => {
					eq_(has, true);
					done();
				});
		});
	},
	'should toggle foo class' (done) {
		Utils.query('/html/foo.html', $ => {
			$
				.find('body > section')
				.toggleClass('foo')
				.hasClass('foo')
				.done(has => {
					eq_(has, false);
					done();
				});
		});
	},
	'should add baz class' (done) {
		Utils.query('/html/foo.html', $ => {
			$
				.find('body > section')
				.addClass('baz')
				.attr('class')
				.done(val => {
					eq_(val, 'foo baz');
					done();
				});
		});
	},
});

